{
  "extends": "./packages/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@repo/db": ["packages/database/src"],
      "@repo/typescript-config/*": ["packages/typescript-config/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts",
    "packages/database/prisma.config.js"
  ],
  "exclude": ["node_modules"]
}
